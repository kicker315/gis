<resources>

    <!-- Base application theme. -->
    <style name="Zrdc" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="colorControlHighlight">@color/light_scrim</item>
    </style>

    <style name="checkbox_lm" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="checkbox_center" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableEnd">@drawable/checkbox_style</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:padding">8dp</item>
    </style>



    <!-- 主页面 tab栏 -->
    <style name="rb_tab" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">@dimen/elevation_normal</item>
        <item name="android:textColor">@drawable/tab_text_color_checked</item>
    </style>

    <!-- map fragment 右部栏 -->
    <style name="rb_operation" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/tab_tools_bg_color_checked</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/tab_tools_text_color_checked</item>
        <item name="android:textSize">10sp</item>

    </style>

    <!-- map fragment 二级栏  -->
    <style name="rb_suboperation" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/tab_text_color_checked</item>
    </style>

    <!-- map fragment 底部栏 -->
    <style name="rb_bottombar" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/tab_text_color_pressed</item>
    </style>

    <!-- 绘图 操作栏 -->
    <style name="rb_editbox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/tab_text_color_pressed</item>
    </style>

    <!-- 图层管理页面 操作按钮 -->
    <style name="rb_layermanager_operate">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/shape_corner_bottombar</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_text_color_pressed</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- 定位、查询、导出、数据编辑、数据删除等按钮 -->
    <style name="btn_other" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tab_text_color_press</item>
        <item name="android:background">@drawable/shape_project_open</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- 搜索结果中显示字段 -->
    <style name="tv_field" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="setting_right_arrow">
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:padding">15dp</item>

    </style>

    <style name="NoAnimationDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/app_font_family</item>
    </style>

    <style name="AppText.Tiny">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppText.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Tiny.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Small.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Medium.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Big.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Large.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.LightDark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Tiny.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Small.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Medium.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Big.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Large.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Tiny.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Small.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Medium.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Big.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Large.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Medium.WishTag">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_bright</item>
    </style>

    <style name="TruncatedSingle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TruncatedMulti">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EmptyText" parent="AppText">
        <item name="android:textSize">0sp</item>
    </style>

</resources>

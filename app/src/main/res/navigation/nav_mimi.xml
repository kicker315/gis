<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_mimi"
    app:startDestination="@id/main_fragment">
    <fragment
        android:id="@+id/main_fragment"
        android:name="com.zydcc.zrdc.ui.main.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_fragment_to_sys_fragment"
            app:destination="@id/sys_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_main_fragment_to_media_fragment"
            app:destination="@id/media_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_screenshot_manager_fragment"
            app:destination="@id/screenshotManagerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/sys_fragment"
        android:name="com.zydcc.zrdc.ui.sys.SysFragment"
        tools:layout="@layout/fragment_sys">

    </fragment>
    <fragment
        android:id="@+id/media_fragment"
        android:name="com.zydcc.zrdc.ui.media.MediaFragment"
        tools:layout="@layout/fragment_media">
        <action
            android:id="@+id/action_media_to_draw"
            app:destination="@id/draw_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/screenshotManagerFragment"
        android:name="com.zydcc.zrdc.ui.screenshotmanager.ScreenshotManagerFragment"
        android:label="ScreenshotManagerFragment"
        tools:layout="@layout/fragment_screenshot_manager"/>
    <fragment
        android:id="@+id/draw_fragment"
        android:name="com.zydcc.zrdc.ui.freedraw.DrawFragment"
        android:label="DrawFragment"
        tools:layout="@layout/fragment_draw"/>
</navigation>
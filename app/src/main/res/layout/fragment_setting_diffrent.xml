<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txt_difference_mode"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rv_difference_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small">

                <TextView
                    android:id="@+id/tv_difference_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/sp_arrow"
                    android:padding="7dp"
                    android:text="@string/txt_difference_account"
                    android:textSize="@dimen/textsize_normal" />

                <ImageView
                    android:id="@+id/sp_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingEnd="@dimen/padding_normal"
                    android:src="@drawable/icon_arrow_bottom"
                    android:contentDescription="@string/app_name"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ntrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_difference_state"
                    android:textSize="@dimen/textsize_normal" />

                <TextView
                    android:id="@+id/tv_different_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_no_connected"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_difference_account"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/tv_different_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/please_input_different_account"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="@dimen/padding_normal"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_difference_pwd"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/tv_different_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/please_input_pwd"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"
                    android:paddingEnd="@dimen/padding_normal"
                    android:textSize="@dimen/textsize_normal" />

                <ImageView
                    android:id="@+id/img_pwd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/pwdgone"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_different_url"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/tv_different_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/please_input_ip"
                    android:lines="1"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/txt_difference_port"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/tv_different_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/please_input_port"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5.0dip"
                android:background="@drawable/shape_corner_confirm"
                android:paddingHorizontal="70dp"
                android:paddingVertical="8dp"
                android:paddingStart="70dp"
                android:paddingTop="8dp"
                android:paddingEnd="70dp"
                android:paddingBottom="8dp"
                android:text="@string/txt_save"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>
    </LinearLayout>
</layout>